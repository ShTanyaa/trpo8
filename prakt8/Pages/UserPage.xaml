<Page x:Class="prakt8.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prakt8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage"
      Background="White">

    <Grid>
        <StackPanel>
            <Label Content="Изменение информации о пользователе:"
FontSize="18" FontWeight="SemiBold"/>
            <Label Content="User name: " />
            <TextBox Text="{Binding Username}" />
            <Label Content="Status: " />
            <TextBox Text="{Binding Status}" />
            <Label Content="Last login: " />
            <DatePicker SelectedDate="{Binding LastLogin}" />
            <Button Margin="0, 10" Content="Изменить программно" Click="Button_Click" />
            <Button Margin="0, 10" Content="Проверить свойства" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Page>
